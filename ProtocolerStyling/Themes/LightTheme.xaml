<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ProtocolerStyling.Themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/ProtocolerStyling;component/Common/TextBlock.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ProtocolerStyling;component/Common/Buttons.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ProtocolerStyling;component/Common/Window.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--#region TextBlocks -->
    <Style TargetType="TextBlock" x:Key="TextBlockTitleStyle" BasedOn="{StaticResource TitleTextBlockLight}"/>
    <Style TargetType="TextBlock" x:Key="TextBlockStyle" BasedOn="{StaticResource MainTextLight}"/>
    <!--#endregion-->
    
    <Style TargetType="Window" x:Key="MainWindowStyle" BasedOn="{StaticResource WindowStyleLight}"/>
    <Style TargetType="Button" x:Key="SimpleButtonStyle" BasedOn="{StaticResource ShellButton}"/>
</ResourceDictionary>